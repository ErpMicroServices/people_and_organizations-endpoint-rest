<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" xmlns = "http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" >
	<modelVersion >4.0.0</modelVersion >
	<parent >
		<groupId >org.springframework.boot</groupId >
		<artifactId >spring-boot-starter-parent</artifactId >
		<version >2.7.3</version >
		<relativePath /> <!-- lookup parent from repository -->
	</parent >
	<groupId >org.erpmicroservices.people_and_organizations.endpoint.rest</groupId >
	<artifactId >people_and_organizations-endpoint-rest</artifactId >
	<version >1.0.1-SNAPSHOT</version >
	<packaging >jar</packaging >
	<name >People and Organizations Service Restful Endpoint</name >
	<description >A restful HATEOAS based API for handling data about people and organizations.</description >
	<scm >
		<connection >scm:git:ssh://git@github.com/ErpMicroServices/people_and_organizations-endpoint-rest.git
		</connection >
		<developerConnection >scm:git:ssh://git@github.com/ErpMicroServices/people_and_organizations-endpoint-rest.git
		</developerConnection >
		<url >scm:git:ssh://git@github.com/ErpMicroServices/people_and_organizations-endpoint-rest.git</url >
		<tag >people_and_organizations-endpoint-rest-1.0.0</tag >
	</scm >
	<properties >
		<java.version >18</java.version >
	</properties >
	<distributionManagement >
		<repository >
			<id >github</id >
			<name >GitHub ErpMicroServices Apache Maven Packages</name >
			<url >https://maven.pkg.github.com/ErpMicroServices/people_and_organizations-endpoint-rest</url >
		</repository >
	</distributionManagement >
	<dependencies >
		<dependency >
			<groupId >org.springframework.boot</groupId >
			<artifactId >spring-boot-starter-hateoas</artifactId >
		</dependency >

		<dependency >
			<groupId >org.springframework.boot</groupId >
			<artifactId >spring-boot-starter-actuator</artifactId >
		</dependency >

		<dependency >
			<groupId >org.springframework.boot</groupId >
			<artifactId >spring-boot-starter-data-jpa</artifactId >
		</dependency >

		<dependency >
			<groupId >org.springframework.boot</groupId >
			<artifactId >spring-boot-starter-data-rest</artifactId >
		</dependency >

		<!-- https://mvnrepository.com/artifact/org.postgresql/postgresql -->
		<dependency >
			<groupId >org.postgresql</groupId >
			<artifactId >postgresql</artifactId >
			<version >42.5.0</version >
		</dependency >

		<dependency >
			<groupId >org.hibernate.validator</groupId >
			<artifactId >hibernate-validator</artifactId >
			<version >7.0.5.Final</version >
		</dependency >

		<dependency >
			<groupId >org.springframework.boot</groupId >
			<artifactId >spring-boot-starter-test</artifactId >
			<scope >test</scope >
			<exclusions >
				<exclusion >
					<groupId >org.junit.vintage</groupId >
					<artifactId >junit-vintage-engine</artifactId >
				</exclusion >
			</exclusions >
		</dependency >

		<dependency >
			<groupId >org.apache.commons</groupId >
			<artifactId >commons-lang3</artifactId >
		</dependency >

		<dependency >
			<groupId >com.vladmihalcea</groupId >
			<artifactId >hibernate-types-52</artifactId >
			<version >2.18.0</version >
		</dependency >

		<dependency >
			<groupId >org.projectlombok</groupId >
			<artifactId >lombok</artifactId >
		</dependency >
	</dependencies >

	<build >
		<plugins >
			<plugin >
				<groupId >org.springframework.boot</groupId >
				<artifactId >spring-boot-maven-plugin</artifactId >
				<configuration >
					<imageName >erpmicroservices/people_and_organizations_endpoint_rest</imageName >
				</configuration >
			</plugin >
		</plugins >
	</build >


</project >
